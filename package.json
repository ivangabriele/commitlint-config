{
  "name": "@ivangabriele/commitlint-config",
  "description": "My most commonly used CommitLint configuration.",
  "license": "MIT",
  "version": "1.0.2",
  "main": "./index.json",
  "scripts": {
    "prepare": "husky install"
  },
  "dependencies": {
    "@commitlint/config-conventional": "17.6.6"
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.6",
    "@ivangabriele/prettier-config": "3.1.0",
    "@ivangabriele/semantic-release-config-base": "2.1.0",
    "husky": "8.0.3",
    "lint-staged": "13.2.3",
    "prettier": "2.8.8",
    "semantic-release": "21.0.6"
  },
  "//": "https://github.com/okonet/lint-staged/issues/825#issuecomment-674575655",
  "lint-staged": {
    "*.{json,md,yaml,yml}": "prettier --write"
