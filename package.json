{
  "name": "@ivangabriele/commitlint-config",
  "description": "My most commonly used CommitLint configuration.",
  "license": "MIT",
  "version": "1.1.0",
  "main": "./index.json",
  "scripts": {
    "prepare": "husky install"
  },
  "dependencies": {
    "@commitlint/config-conventional": "18.6.0"
  },
  "devDependencies": {
    "@commitlint/cli": "18.6.0",
    "@ivangabriele/prettier-config": "3.1.0",
    "@ivangabriele/semantic-release-config-base-yarn": "3.0.3",
    "husky": "9.0.10",
    "lint-staged": "15.2.2",
    "prettier": "3.2.5",
    "semantic-release": "23.0.1"
  },
  "//": "https://github.com/okonet/lint-staged/issues/825#issuecomment-674575655",
  "lint-staged": {
    "*.{json,md,yaml,yml}": "prettier --write"
  },
  "packageManager": "yarn@4.1.0",
  "prettier": "@ivangabriele/prettier-config",
  "release": {
    "extends": "@ivangabriele/semantic-release-config-base-yarn"
  },
  "author": {
    "name": "Ivan Gabriele",
    "email": "ivan.gabriele@gmail.com",
    "url": "https://www.ivangabriele.com"
  },
  "bugs": {
    "email": "ivan.gabriele@gmail.com",
    "url": "https://github.com/ivangabriele/commitlint-config/issues"
  },
  "homepage": "https://github.com/ivangabriele/commitlint-config#readme",
  "keywords": [
    "commitlint",
    "config"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": "ivangabriele/commitlint-config"
}
