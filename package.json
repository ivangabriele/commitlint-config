  "author": {
    "name": "Ivan Gabriele",
    "email": "ivan.gabriele@gmail.com",
    "url": "https://www.ivangabriele.com"
  },
  "bugs": {
    "email": "ivan.gabriele@gmail.com",
    "url": "https://github.com/ivangabriele/commitlint-config/issues"
  },
  "homepage": "https://github.com/ivangabriele/commitlint-config#readme",
  "keywords": [
    "commitlint",
    "config"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": "ivangabriele/commitlint-config"
}
